<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@android:color/white"
    tools:context=".Sarees">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="1">
   <TextView
       android:layout_centerHorizontal="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textSize="40sp"
       android:textStyle="bold"
       android:gravity="center_horizontal"
       android:text="@string/sarees"
       />
 </RelativeLayout>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
    android:columnCount="2"
    android:rowCount="4">
    <ImageButton
        android:id="@+id/firstSaree"
        android:onClick="toFirstSaree"
        android:layout_width="0dp"
        android:src="@drawable/saree1"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:id="@+id/secoSaree"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:src="@drawable/saree2"
        android:onClick="toSecondSaree"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"/>
</GridLayout>

    <!--TabBar Buttons-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/SareeHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:layout_weight="1"
            android:onClick="toHome"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/SareeProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:layout_weight="1"
            android:onClick="toProfile"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/SareeFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Fav"
            android:onClick="toFav"
            tools:ignore="ButtonStyle" />
        <Button
            android:id="@+id/SareeCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cart"
            android:onClick="toCart"
            tools:ignore="ButtonStyle" />

    </LinearLayout>
</LinearLayout>
